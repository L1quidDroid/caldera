# Caldera Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# CALDERA CORE CREDENTIALS
# Generate secure random values for production:
#   python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# =============================================================================
CALDERA_API_KEY_RED=
CALDERA_API_KEY_BLUE=
CALDERA_ENCRYPTION_KEY=
CALDERA_CRYPT_SALT=

# =============================================================================
# CALDERA SERVER CONFIGURATION
# =============================================================================
CALDERA_URL=http://localhost:8888
# For HTTPS deployments:
# CALDERA_URL=https://caldera.yourdomain.com:8443

# =============================================================================
# SSL/TLS VERIFICATION
# Set to 'false' only for development with self-signed certificates
# =============================================================================
SSL_VERIFY=true

# =============================================================================
# SIEM INTEGRATION - ELASTICSEARCH
# =============================================================================
ELASTIC_ENDPOINT=
ELASTIC_API_KEY=
# Example: ELASTIC_ENDPOINT=https://elasticsearch.company.internal:9200

# =============================================================================
# SIEM INTEGRATION - SPLUNK (optional)
# =============================================================================
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=

# =============================================================================
# NOTIFICATION WEBHOOKS
# =============================================================================
SLACK_WEBHOOK_URL=
WEBHOOK_TOKEN=
N8N_WEBHOOK_URL=

# =============================================================================
# AZURE DEPLOYMENT (for Bicep deployments)
# These should be stored in Azure Key Vault for production
# =============================================================================
# AZURE_SUBSCRIPTION_ID=
# AZURE_RESOURCE_GROUP=
# AZURE_KEY_VAULT_NAME=

# =============================================================================
# ENROLLMENT API AUTHENTICATION
# Generate a secure token for the enrollment API
# =============================================================================
ENROLLMENT_API_KEY=
