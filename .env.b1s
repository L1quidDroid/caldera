# =============================================================================
# Caldera POC Environment Configuration
# =============================================================================
# Copy to .env and configure for your deployment
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# B1s MEMORY OPTIMIZATION SETTINGS
# These settings are tuned for Azure B1s VM (1GB RAM)
# -----------------------------------------------------------------------------
ES_HEAP_SIZE=256m
MEM_LIMIT_ES=512m
MEM_LIMIT_CALDERA=256m

# Disable memory-heavy features on B1s
DISABLE_KIBANA=true
DISABLE_N8N=true

# -----------------------------------------------------------------------------
# CALDERA CORE CREDENTIALS
# Generate secure random values:
#   python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# -----------------------------------------------------------------------------
CALDERA_API_KEY_RED=
CALDERA_API_KEY_BLUE=
CALDERA_ENCRYPTION_KEY=
CALDERA_CRYPT_SALT=

# -----------------------------------------------------------------------------
# CALDERA SERVER CONFIGURATION
# -----------------------------------------------------------------------------
CALDERA_URL=http://localhost:8888

# Safety Rails: Set to 'true' for POC/testing (prevents production operations)
TEST_MODE=true

# -----------------------------------------------------------------------------
# ELASTICSEARCH CONFIGURATION
# For B1s: Using local Elasticsearch container
# -----------------------------------------------------------------------------
ELASTIC_ENDPOINT=http://elasticsearch:9200
ELASTIC_PASSWORD=changeme
ELASTIC_API_KEY=

# Index name for Caldera events
ELASTIC_INDEX_NAME=caldera-events

# -----------------------------------------------------------------------------
# SIEM INTEGRATION (External - optional)
# For corporate ELK integration outside the B1s VM
# -----------------------------------------------------------------------------
# EXTERNAL_ELASTIC_ENDPOINT=https://elk.company.internal:9200
# EXTERNAL_ELASTIC_API_KEY=

# Splunk HEC (optional)
# SPLUNK_HEC_URL=https://splunk.company.internal:8088
# SPLUNK_HEC_TOKEN=

# -----------------------------------------------------------------------------
# NOTIFICATION WEBHOOKS
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=
# Teams webhook (optional)
# TEAMS_WEBHOOK_URL=

# Generic webhook token for authentication
WEBHOOK_TOKEN=

# -----------------------------------------------------------------------------
# GITHUB INTEGRATION (for report publishing)
# Create a Personal Access Token with 'repo' scope
# -----------------------------------------------------------------------------
GITHUB_TOKEN=
GITHUB_REPO=your-org/caldera-reports
GITHUB_PAGES_BRANCH=gh-pages

# -----------------------------------------------------------------------------
# REPORTS CONFIGURATION
# -----------------------------------------------------------------------------
REPORTS_DIR=./reports

# -----------------------------------------------------------------------------
# SSL/TLS CONFIGURATION
# Set to 'false' for local development with self-signed certs
# -----------------------------------------------------------------------------
SSL_VERIFY=false

# -----------------------------------------------------------------------------
# ENROLLMENT API
# For dynamic agent enrollment
# -----------------------------------------------------------------------------
ENROLLMENT_API_KEY=

# -----------------------------------------------------------------------------
# AZURE DEPLOYMENT (for Bicep - if not using B1s Docker)
# Store in Azure Key Vault for production
# -----------------------------------------------------------------------------
# AZURE_SUBSCRIPTION_ID=
# AZURE_RESOURCE_GROUP=rg-caldera-dev
# AZURE_KEY_VAULT_NAME=kv-caldera-dev
# AZURE_LOCATION=australiaeast
